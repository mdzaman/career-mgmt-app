{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "outDir": "./lib",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}